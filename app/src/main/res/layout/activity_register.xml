<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".Register"
        tools:ignore="RedundantNamespace,ScrollViewSize,UseCompoundDrawables"
        android:orientation="vertical">

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="140sp"
        android:contentDescription="TODO"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/im"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded,ImageContrastCheck" />

    <TextView
        android:id="@+id/EmailV"
        android:layout_width="132dp"
        android:layout_height="31dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="60sp"
        android:text="Email"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:background="@color/white"
        tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields,SpeakableTextPresentCheck" />

    <TextView
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:id="@+id/PasswordV"
        android:layout_width="132dp"
        android:layout_height="31dp"
        android:text="Password"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText,RtlHardcoded">
    </TextView>

    <EditText
        android:id="@+id/Password"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/RegBtn"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#7C6565"
        android:text="Register"
        tools:ignore="HardcodedText,RtlHardcoded">

    </Button>

    <TextView
        android:id="@+id/LogBtn"
        android:layout_width="88dp"
        android:layout_height="26dp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="200sp"
        android:layout_marginBottom="168dp"
        android:text="Login"
        android:textAlignment="center"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    </LinearLayout>
</ScrollView>